<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <HBox>
        <children>
            <HBox fx:id="graph" prefHeight="350" prefWidth="610">
            </HBox>
            <VBox prefHeight="350" prefWidth="610">
                <Label wrapText="" text="${'[TO BE IMPLEMENTED]\nHEIGHT: 170CM\nWEIGHT: 70KG\nBMI: 24.2'}"/>
            </VBox>
        </children>
    </HBox>
    <HBox prefWidth="450" prefHeight="50">
        <children>
            <VBox prefWidth="340" alignment="BOTTOM_CENTER">
                <Label text="Exercises:" id="headers"/>
            </VBox>
            <VBox prefWidth="340" alignment="BOTTOM_CENTER">
                <Label text="Routines:" id="headers"/>
            </VBox>
            <VBox prefWidth="340" alignment="BOTTOM_CENTER">
                <Label text="Lessons:" id="headers"/>
            </VBox>
        </children>
    </HBox>
    <HBox prefHeight="350.0" prefWidth="200.0">
        <children>
            <VBox fx:id="exerciseList" minWidth="200" prefWidth="340" styleClass="pane-with-border">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <StackPane fx:id="exerciseListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="routineList" minWidth="200" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <StackPane fx:id="routineListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="lessonList" minWidth="200" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <StackPane fx:id="lessonListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>
        </children>
    </HBox>

</VBox>
